.film_detail_image{
  height: 300rpx;
  width: 200rpx;
  margin-top: -30rpx;
  z-index: 999;
}

.movie-detail {
  background-color: #ffffff;
  border: 2rpx solid #bdbdbd;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-title {
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.movie-catlog {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #9e9e9e;
}
.movie-description {
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  padding-top: 20rpx;
}
.btn-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
.btn-wrapper {
  border: 1rpx solid #bdbdbd;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 35%;
  margin-bottom: 100rpx;
}
.btn-image-comment {
  width: 40rpx;
  height: 40rpx;
  margin-top: 8rpx;
}
.btn-text {
  font-size: 32rpx;
  line-height: 48rpx;
  padding-left: 20rpx;
}

.movie-container {
  padding: 10% 50rpx 5%;
}

.text_aera{
  display: flex; 
  width: 500rpx;
}